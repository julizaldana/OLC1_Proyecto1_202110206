/* Terminales */
terminal COMILLA;
terminal STRING;
terminal LLAV_A;
terminal DOUBLE;
terminal COMA;
terminal DOSPTS;
terminal LLAV_C;

/* No Terminales */
nonterminal inicio, elementos, elemento, clave, valor, lista;

/* Producciones */
start with inicio;

inicio ::= LLAV_A elementos LLAV_C;

elementos ::= elemento
            | elementos COMA elemento;

elemento ::= clave DOSPTS valor;

clave ::= STRING;

valor ::= STRING
        | DOUBLE
        | LLAV_A lista LLAV_C;

lista ::= valor
        | lista COMA valor;
